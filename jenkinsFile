/* Requires the Docker Pipeline plugin */
pipeline {
    agent any
    
    stages {
        stage('build') {
            agent { docker { image 'node:18-alpine'
    
           label 'docker-on-vas'
    }
    
    }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

            stage('Test') {
                agent { docker { image 'node:18-alpine'
                
                    label 'docker-on-vas'
                }
    
    }

            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''
            }
        }
                    stage('RUN') {
                agent { docker { image 'node:18-alpine'
                
                    label 'docker-on-vas'
                }
    
    }
            steps {
                sh '''
                    // test -f build/index.html
                    npm start
                '''
            }
        }
}
}