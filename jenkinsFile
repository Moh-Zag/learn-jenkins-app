/* Requires the Docker Pipeline plugin */
pipeline {
    agent any
    
    stages {
        stage('build') {
            agent { docker { image 'node:18-alpine'
    
           label 'docker-on-vas'
    }
    
    }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

            stage('Test') {
                agent { docker { image 'node:18-alpine'
                
                    label 'docker-on-vas'
                }
    
    }

            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''
                    junit 'test-results/junit.xml'
            }
        }
                        stage('E2E') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                    label 'docker-on-vas'
                    // reuseNode true
                }
            }

            steps {
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 10
                    npx playwright test
                '''
            }
        }
}
    // post {
    //     always {
    //         junit 'test-results/junit.xml'
    //     }
    // }
}