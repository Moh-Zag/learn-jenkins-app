/* Requires the Docker Pipeline plugin */
pipeline {
    agent { docker { image 'node:18-alpine'
    
           label 'docker-on-vas'
    }
    
    }
    stages {
        stage('build') {
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
